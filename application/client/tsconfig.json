{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es7",
            "es2018",
            "dom"
        ],
        "outDir": "./build/",
        "jsx": "react",
        "experimentalDecorators": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "awesomeTypescriptLoaderOptions": {
        "useCache": true
    },
    "module": "commonjs",
    "include": [
        "src/main/**/*",
        "src/test/**/*"
    ]
}
